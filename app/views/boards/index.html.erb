<p id="notice"><%= notice %></p>

<h1>Listing Boards</h1>

<table class="table">
  <thead>
    <tr>
      <th>Name</th>
      <th>Subdomain</th>
      <th>Admin</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @boards.each do |board| %>
      <tr>
        <td><%= board.name %></td>
        <td><%= board.subdomain %></td>
        <td><%= board.admin.email %></td>
        <td><%= link_to 'Show', board %></td>
        <td><%= link_to 'Edit', edit_board_path(board) %></td>
        <td><%= link_to 'Destroy', board, method: :delete, data: { confirm: 'Are you sure?' } %></td>
        <td><%= link_to 'Go to Board', listings_url(subdomain: board.subdomain) %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>

